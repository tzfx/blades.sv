{
    "name": "blades.sv",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "postcss public/tailwind.css -o public/app.css && rollup -c",
        "dev": "concurrently \"npm:tailwind\" \"rollup -c -w\"",
        "start": "sirv public --no-clear",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "tailwind": "postcss public/tailwind.css -o public/app.css -w"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "@rollup/plugin-typescript": "^8.0.0",
        "@rollup/plugin-yaml": "^3.1.0",
        "@tailwindcss/forms": "^0.5.1",
        "@tsconfig/svelte": "^2.0.0",
        "autoprefixer": "^10.4.7",
        "concurrently": "^7.1.0",
        "postcss": "^8.4.13",
        "postcss-cli": "^9.1.0",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0",
        "svelte-check": "^2.0.0",
        "svelte-preprocess": "^4.0.0",
        "tailwindcss": "^3.0.24",
        "tslib": "^2.0.0",
        "typescript": "^4.0.0"
    },
    "dependencies": {
        "@editorjs/editorjs": "^2.24.3",
        "line-awesome": "^1.3.0",
        "sirv-cli": "^2.0.0",
        "snarkdown": "^2.0.0"
    }
}
